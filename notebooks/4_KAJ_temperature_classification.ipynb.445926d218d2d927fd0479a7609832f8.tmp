def label_data(
    temp,
    day_col="event_day",
):
    """Binary label indicating if there was a fire (1) or not (0) for
    the given location and day."""
    labeled_df = (
        alerts.assign(day=alerts[day_col])
        .drop(columns=day_col)
        .merge(
            temp,
            how="right",
            on=common_cols,
        )
        .sort_values(common_cols)
        .reset_index(drop=True)
    )
    return labeled_df[temp.columns].assign(
        **{"fire": np.where(labeled_df.iloc[:, 0].isna(), 0, 1)}
    )